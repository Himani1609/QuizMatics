@model QuizMatics.Models.ViewModels.TeacherDetails

@{
    ViewData["Title"] = "Teacher Details";
}

<h1>@ViewData["Title"]</h1>

<!-- Teacher Info -->
<div>
    <strong>Id:</strong> @Model.Teacher.TeacherId
</div>
<div>
    <strong>Name:</strong> @Model.Teacher.Name
</div>
<div>
    <strong>Total Lessons:</strong> @Model.Teacher.TotalLessons
</div>
<div>
    <strong>Total Quizzes:</strong> @Model.Teacher.TotalQuizzes
</div>

<hr />

<a asp-action="List" class="btn btn-primary"> Back to List</a>
<a asp-action="Edit" asp-route-id="@Model.Teacher.TeacherId" class="btn btn-secondary">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Teacher.TeacherId" class="btn btn-danger">Delete</a>

<hr />

<!-- Lessons List -->
<h3>Lessons</h3>
@if (Model.Lessons != null && Model.Lessons.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Lesson Title</th>
                <th>Description</th>
                <th>Date Created</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model.Lessons)
            {
                <tr>
                    <td>@lesson.Title</td>
                    <td>@lesson.Description</td>
                    <td>@lesson.DateCreated.ToShortDateString()</td>
                    <td>
                        <a asp-controller="LessonPage" asp-action="Details" asp-route-id="@lesson.LessonId" class="btn btn-info btn-sm"> View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No lessons found for this teacher.</p>
}
