@model TeacherDto

<div class="text-center">
    <h2 class="text-center">Are you sure you want to delete this teacher?</h2>
</div>

<div class="text-center mb-4">
    <p class="text-primary">Name: @Model.Name</p>
</div>

<div class="text-center">
    <form asp-action="Delete" asp-route-id="@Model.TeacherId" method="post">
        <button type="submit" class="btn btn-danger btn-lg">Yes, Delete</button>
        <a asp-action="List" asp-route-id="@Model.TeacherId" class="btn btn-secondary btn-lg">Cancel</a>
    </form>
</div>

<style>
    h2 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .text-primary {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .btn-lg {
        padding: 12px 30px;
        font-size: 1rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }
</style>
