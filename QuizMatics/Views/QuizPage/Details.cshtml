@model QuizMatics.Models.ViewModels.QuizDetails

@{
    ViewData["Title"] = "Quiz Details";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="quiz-info">
    <p><strong>Quiz ID:</strong> @Model.Quiz.QuizId</p>
    <p><strong>Title:</strong> @Model.Quiz.Title</p>
    <p><strong>Description:</strong> @Model.Quiz.Description</p>
    <p><strong>Max Mins Allotted:</strong> @Model.Quiz.MaxMinsAlotted</p>
    <p><strong>Grade:</strong> @Model.Quiz.Grade</p>
    <p><strong>Difficulty Level:</strong> @Model.Quiz.DifficultyLevel</p>
</div>

<hr />

<h3 class="text-center my-4">Lessons Associated with this Quiz</h3>
@if (Model.Lessons != null && Model.Lessons.Any())

{
    <table class="table">
        <thead>
            <tr>
                <th>Lesson ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model.Lessons)

            {
                <tr>
                    <td>@lesson.LessonId</td>
                    <td>@lesson.Title</td>
                    <td>@lesson.Description</td>
                    <td>@lesson.DateCreated.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}

else

{
    <p class="text-center">No lessons are associated with this quiz.</p>
}

<hr />

<div class="btn-group text-center my-3">
    <a asp-action="List" class="btn btn-primary btn-sm">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.Quiz.QuizId" class="btn btn-warning btn-sm mx-2">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Quiz.QuizId" class="btn btn-danger btn-sm">Delete</a>
</div>

<style>
    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .quiz-info p {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .btn-group {
        display: inline-block; 
        margin-top: 15px;
    }

    .btn-group a {
        margin-bottom: 15px;
    }

    .btn-sm {
        padding: 8px 20px;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .table {
        margin-top: 30px;
    }

        .table th, .table td {
            text-align: center;
        }
</style>
