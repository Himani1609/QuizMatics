@model LessonDto

<h2>Are you sure you want to delete this lesson?</h2>

<div>
    <p class="text-primary">Title: @Model.Title</p>
    <p class="text-primary">Description: @Model.Description</p>
    <p class="text-primary">Date Created: @Model.DateCreated</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.LessonId" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
